<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="StudyBlocks.Distracted" x:Name="page" >
	<ContentPage.Content>

        <StackLayout VerticalOptions="CenterAndExpand">

            <Button x:Name="Boom" Text="Distracted" VerticalOptions="Center"/>

            <Label x:Name="Results" VerticalOptions="Start" HorizontalOptions="StartAndExpand" IsVisible="false"/>

            <StackLayout x:Name="SpeechArea" IsVisible="false" VerticalOptions="CenterAndExpand">

                <Label x:Name="Reason" Text="Note what distracted you, below: " Margin="0,30,0,0"/>

            <Entry x:Name="DisplayResult" Text="" Placeholder="Your text will be displayed here" />

            <ActivityIndicator HorizontalOptions="Center" IsRunning="{Binding Source={x:Reference page}, Path=IsProcessing}" />

            <Button Image="microphone.png" Clicked="OnRecognizeSpeechButtonClicked" Margin="0,-5,0,0" />

            <Button x:Name="Home" Text="Home" VerticalOptions="End" HorizontalOptions="End"/>
                
            </StackLayout>

        </StackLayout>
        
	</ContentPage.Content>
</ContentPage>
