<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:StudyBlocks" x:Class="StudyBlocks.StudyBlocksPage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <StackLayout VerticalOptions="Start" Margin="0,0,0,200">

            <Label x:Name="Title" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />


            <Button Image="add.png" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Clicked="OnButtonClicked" Margin="0,30,0,-10"/>
            <Label x:Name="Setup" Text="Setup" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" TextColor="Blue"/>


        </StackLayout>

        <StackLayout VerticalOptions="End" Margin="0,-80,0,0">

        <Button x:Name="History" Image="history.png" Text="History" VerticalOptions="End" HorizontalOptions="CenterAndExpand" TextColor="Black"/>


        </StackLayout>

    </StackLayout>

        

    
</ContentPage>
